<div class="title-container">
  <h2>Denke</h2>
  <a href="/denkes/profile" class="btn">Novo denke</a>
</div>
<section class="profile-info">
  <img src="/assets/img/generic-avatar.png">
  <ul>
    <li>@{{denke.User.username}} ({{denke.User.name}})</li>
    <li>{{denke.User.email}}</li>
    <li>Entrou em <span data-date>{{denke.User.createdAt}}</span></li>
  </ul>
</section>
<div class="denkes-container">
  <figure>
    <blockquote>{{denke.denkecontent}}</blockquote>
    <div class="metainfo">
      <span data-date class="date">{{denke.updatedAt}}</span>
    </div>
  </figure>
</div>
<div class="title-container">
  <h2>Comentários</h2>
</div>
<div class="reply-container">
  <form method="post" action="/reply/add">
    <input type="hidden" name="denkeId" id="denkeId" value="{{denke.id}}"></input>
    <textarea name="replyContent" id="replyContent" cols="30" rows="10" maxlength="250" placeholder="Escreva o seu comentário aqui"></textarea>
    <input type="submit" class="btn" value="Comentar">
  </form>
  <div class="replies">
    {{#each replies}}
      <figure>
        <blockquote>{{this.replycontent}}</blockquote>
        <div class="metainfo">
          <figcaption>@{{this.User.username}}</figcaption>
          <span data-date class="date">{{this.updatedAt}}</span>
        </div>
      </figure>
    {{/each}}
  </div>
</div>

<script src="/assets/js/formatDate.js"></script>